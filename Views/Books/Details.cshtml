@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
            {
                <img src="@Model.CoverImageUrl" class="img-fluid rounded shadow" alt="@Model.Title" />
            }
            else
            {
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                    <i class="bi bi-book" style="font-size: 6rem;"></i>
                </div>
            }
            
            <div class="card mt-3">
                <div class="card-body">
                    <h5>Availability</h5>
                    @if (Model.AvailableCopies > 0)
                    {
                        <span class="badge bg-success fs-6">Available</span>
                        <p class="mt-2">@Model.AvailableCopies of @Model.TotalCopies copies available</p>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">Not Available</span>
                        <p class="mt-2">All @Model.TotalCopies copies are currently on loan</p>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <hr />
            
            <dl class="row">
                <dt class="col-sm-3">ISBN</dt>
                <dd class="col-sm-9">@Model.ISBN</dd>
                
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Model.Category.Name</span>
                </dd>
                
                <dt class="col-sm-3">Publisher</dt>
                <dd class="col-sm-9">@Model.Publisher.Name</dd>
                
                <dt class="col-sm-3">Published Year</dt>
                <dd class="col-sm-9">@Model.PublishedYear</dd>
                
                @if (Model.BookAuthors.Any())
                {
                    <dt class="col-sm-3">Authors</dt>
                    <dd class="col-sm-9">
                        @string.Join(", ", Model.BookAuthors.Select(ba => ba.Author.FullName))
                    </dd>
                }
                
                <dt class="col-sm-3">Total Copies</dt>
                <dd class="col-sm-9">@Model.TotalCopies</dd>
                
                <dt class="col-sm-3">Available Copies</dt>
                <dd class="col-sm-9">@Model.AvailableCopies</dd>
                
                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                
                @if (Model.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-3">Last Updated</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</dd>
                }
            </dl>
            
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">Description</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            }
            
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                
                @if (User.IsInRole("Member") || User.IsInRole("Librarian") || User.IsInRole("Admin"))
                {
                    @if (Model.AvailableCopies > 0)
                    {
                        <button id="borrowBook" class="btn btn-success" data-book-id="@Model.BookId">
                            <i class="bi bi-book"></i> Borrow This Book
                        </button>
                    }
                    else
                    {
                        <button id="reserveBook" class="btn btn-info" data-book-id="@Model.BookId">
                            <i class="bi bi-bookmark"></i> Reserve This Book
                        </button>
                    }
                }
                
                @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#borrowBook').click(function () {
                const bookId = $(this).data('book-id');
                const button = $(this);

                if (confirm('Are you sure you want to borrow this book? You will have 14 days to return it.')) {
                    $.ajax({
                        url: '@Url.Action("BorrowBook", "Member")',
                        type: 'POST',
                        data: { bookId: bookId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Processing...');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert(response.message + ' Due date: ' + response.dueDate, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            } else {
                                showAlert(response.message, 'warning');
                                button.prop('disabled', false).html('<i class="bi bi-book"></i> Borrow This Book');
                            }
                        },
                        error: function () {
                            showAlert('Failed to borrow book. Please try again.', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-book"></i> Borrow This Book');
                        }
                    });
                }
            });

            $('#reserveBook').click(function () {
                const bookId = $(this).data('book-id');
                const button = $(this);

                if (confirm('Are you sure you want to reserve this book? You will be notified when it becomes available.')) {
                    $.ajax({
                        url: '@Url.Action("ReserveBook", "Member")',
                        type: 'POST',
                        data: { bookId: bookId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Processing...');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert(response.message, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            } else {
                                showAlert(response.message, 'warning');
                                button.prop('disabled', false).html('<i class="bi bi-bookmark"></i> Reserve This Book');
                            }
                        },
                        error: function () {
                            showAlert('Failed to reserve book. Please try again.', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-bookmark"></i> Reserve This Book');
                        }
                    });
                }
            });

            function showAlert(message, type) {
                const alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show mt-3" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                    '</div>';

                $('.container').prepend(alertHtml);

                setTimeout(function () {
                    $('.alert').fadeOut();
                }, 5000);
            }
        });
    </script>
}
