@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Browse Books";
    var categories = ViewBag.Categories as IEnumerable<LibraryManagementSystem.Models.Category>;
    var userBorrowedBookIds = ViewBag.UserBorrowedBookIds as List<int> ?? new List<int>();
}

<div class="container" style="padding: 2rem 0;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm alert-dismissible fade show">
            <i class="bi bi-x-circle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 style="font-weight: 700; margin-bottom: 0.5rem;">Explore Books</h1>
            <p style="color: #6b7280; margin: 0;">Find your next great read</p>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Book
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4" style="border: 2px solid #f3f4f6;">
        <div class="card-body" style="padding: 1.5rem;">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by title, ISBN..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                var isSelected = ViewBag.CategoryId != null && ViewBag.CategoryId == category.CategoryId;
                                <option value="@category.CategoryId" selected="@isSelected">
                                    @category.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sort By</label>
                    <select name="sortBy" class="form-select">
                        <option value="Title">Title (A-Z)</option>
                        <option value="TitleDesc">Title (Z-A)</option>
                        <option value="Year">Year (Old-New)</option>
                        <option value="YearDesc">Year (New-Old)</option>
                        <option value="Category">Category</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
            
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Results Info -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
    {
        <div style="background: #f9fafb; padding: 1rem 1.5rem; border-radius: 12px; margin-bottom: 1.5rem; display: flex; align-items: center; justify-content: space-between;">
            <div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <span style="color: #6b7280;">Searching for: <strong style="color: #1f2937;">"@ViewBag.SearchTerm"</strong></span>
                }
                @if (ViewBag.CategoryId != null && categories != null)
                {
                    var selectedCategory = categories.FirstOrDefault(c => c.CategoryId == ViewBag.CategoryId);
                    if (selectedCategory != null)
                    {
                        <span style="color: #6b7280;">Category: <strong style="color: #1f2937;">@selectedCategory.Name</strong></span>
                    }
                }
            </div>
            <a asp-action="Index" style="color: #6b7280; font-size: 0.9rem;">Clear âœ•</a>
        </div>
    }

    <!-- Books Grid -->
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-12">
                <div class="card text-center" style="padding: 4rem 2rem; border: 2px dashed #d1d5db; background: #fafafa;">
                    <div style="font-size: 4rem; margin-bottom: 1rem;">ðŸ“­</div>
                    <h3 style="font-weight: 700; margin-bottom: 1rem;">Nothing here yet</h3>
                    <p style="color: #6b7280; margin-bottom: 2rem;">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
                        {
                            <span>Try a different search or filter</span>
                        }
                        else
                        {
                            <span>No books in the library yet</span>
                        }
                    </p>
                    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                    {
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            Add Your First Book
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-primary">
                            Clear Filters
                        </a>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                var userHasThisBook = userBorrowedBookIds.Contains(book.BookId);
                
                <div class="col-md-4 mb-4">
                    <div class="card book-card h-100 @(userHasThisBook ? "border-primary border-3" : "")">
                        @if (userHasThisBook)
                        {
                            <div class="borrowed-indicator">
                                <i class="bi bi-check-circle-fill"></i> You Have This
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                                <i class="bi bi-book" style="font-size: 4rem; color: white;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <strong>ISBN:</strong> @book.ISBN<br />
                                    <strong>Category:</strong> @book.Category.Name<br />
                                    <strong>Publisher:</strong> @book.Publisher.Name<br />
                                    <strong>Year:</strong> @book.PublishedYear
                                </small>
                            </p>
                            <div class="mb-3">
                                @if (userHasThisBook)
                                {
                                    <span class="status-borrowed">
                                        <i class="bi bi-check-circle"></i> You're Reading This
                                    </span>
                                }
                                else if (book.AvailableCopies > 0)
                                {
                                    <span class="status-available">
                                        <i class="bi bi-check"></i> @book.AvailableCopies Available
                                    </span>
                                }
                                else
                                {
                                    <span class="status-unavailable">
                                        <i class="bi bi-x"></i> All Borrowed
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                                {
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           href="?page=@i&searchTerm=@ViewBag.SearchTerm&categoryId=@ViewBag.CategoryId&sortBy=@ViewBag.SortBy">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
