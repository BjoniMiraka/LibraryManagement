@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Books";
    var categories = ViewBag.Categories as IEnumerable<LibraryManagementSystem.Models.Category>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Books Library</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Book
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by title, ISBN..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                <option value="@category.CategoryId" selected="@(ViewBag.CategoryId == category.CategoryId)">
                                    @category.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sort By</label>
                    <select name="sortBy" class="form-select">
                        <option value="Title" selected="@(ViewBag.SortBy == "Title")">Title (A-Z)</option>
                        <option value="TitleDesc" selected="@(ViewBag.SortBy == "TitleDesc")">Title (Z-A)</option>
                        <option value="Year" selected="@(ViewBag.SortBy == "Year")">Year (Old-New)</option>
                        <option value="YearDesc" selected="@(ViewBag.SortBy == "YearDesc")">Year (New-Old)</option>
                        <option value="Category" selected="@(ViewBag.SortBy == "Category")">Category</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Books Grid -->
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                    {
                        <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-book" style="font-size: 4rem; color: white;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-muted">
                            <small>
                                <strong>ISBN:</strong> @book.ISBN<br />
                                <strong>Category:</strong> @book.Category.Name<br />
                                <strong>Publisher:</strong> @book.Publisher.Name<br />
                                <strong>Year:</strong> @book.PublishedYear
                            </small>
                        </p>
                        <div class="mb-2">
                            @if (book.AvailableCopies > 0)
                            {
                                <span class="badge bg-success">Available (@book.AvailableCopies/@book.TotalCopies)</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-sm btn-outline-primary">Details</a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                            {
                                <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-outline-warning">Edit</a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           href="?page=@i&searchTerm=@ViewBag.SearchTerm&categoryId=@ViewBag.CategoryId&sortBy=@ViewBag.SortBy">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

