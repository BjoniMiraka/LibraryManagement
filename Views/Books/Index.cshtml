@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Books";
    var categories = ViewBag.Categories as IEnumerable<LibraryManagementSystem.Models.Category>;
    var userBorrowedBookIds = ViewBag.UserBorrowedBookIds as List<int> ?? new List<int>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Books Library</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Book
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4 border-0 shadow">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search by title, ISBN..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                var isSelected = ViewBag.CategoryId != null && ViewBag.CategoryId == category.CategoryId;
                                <option value="@category.CategoryId" selected="@isSelected">
                                    @category.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sort By</label>
                    <select name="sortBy" class="form-select">
                        <option value="Title">Title (A-Z)</option>
                        <option value="TitleDesc">Title (Z-A)</option>
                        <option value="Year">Year (Old-New)</option>
                        <option value="YearDesc">Year (New-Old)</option>
                        <option value="Category">Category</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
            
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Results Info -->
    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
    {
        <div class="alert alert-info border-0 shadow-sm mb-3">
            <i class="bi bi-search"></i> Searching for: <strong>"@ViewBag.SearchTerm"</strong>
        </div>
    }
    @if (ViewBag.CategoryId != null && categories != null)
    {
        var selectedCategory = categories.FirstOrDefault(c => c.CategoryId == ViewBag.CategoryId);
        if (selectedCategory != null)
        {
            <div class="alert alert-info border-0 shadow-sm mb-3">
                <i class="bi bi-tag"></i> Category: <strong>@selectedCategory.Name</strong>
            </div>
        }
    }

    <!-- Books Grid -->
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-12">
                <div class="card text-center py-5 border-0 shadow">
                    <div class="card-body">
                        <i class="bi bi-book" style="font-size: 5rem; color: #d1d5db;"></i>
                        <h3 class="mt-4">No Books Found</h3>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string) || ViewBag.CategoryId != null)
                            {
                                <span>No books match your search criteria. Try adjusting your filters.</span>
                            }
                            else
                            {
                                <span>The library doesn't have any books yet.</span>
                            }
                        </p>
                        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                        {
                            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-plus-circle"></i> Add Your First Book
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" class="btn btn-secondary mt-3">
                                <i class="bi bi-arrow-clockwise"></i> Clear Filters
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                var userHasThisBook = userBorrowedBookIds.Contains(book.BookId);
                
                <div class="col-md-4 mb-4">
                    <div class="card book-card h-100 @(userHasThisBook ? "border-primary border-3" : "")">
                        @if (userHasThisBook)
                        {
                            <div class="borrowed-indicator">
                                <i class="bi bi-check-circle-fill"></i> You Have This
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                                <i class="bi bi-book" style="font-size: 4rem; color: white;"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <strong>ISBN:</strong> @book.ISBN<br />
                                    <strong>Category:</strong> @book.Category.Name<br />
                                    <strong>Publisher:</strong> @book.Publisher.Name<br />
                                    <strong>Year:</strong> @book.PublishedYear
                                </small>
                            </p>
                            <div class="mb-3">
                                @if (userHasThisBook)
                                {
                                    <span class="status-borrowed">
                                        <i class="bi bi-check-circle"></i> You're Reading This
                                    </span>
                                }
                                else if (book.AvailableCopies > 0)
                                {
                                    <span class="status-available">
                                        <i class="bi bi-check"></i> @book.AvailableCopies Available
                                    </span>
                                }
                                else
                                {
                                    <span class="status-unavailable">
                                        <i class="bi bi-x"></i> All Borrowed
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                                {
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" 
                           href="?page=@i&searchTerm=@ViewBag.SearchTerm&categoryId=@ViewBag.CategoryId&sortBy=@ViewBag.SortBy">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
