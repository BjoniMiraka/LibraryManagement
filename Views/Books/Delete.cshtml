@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Delete - " + Model.Title;
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Book</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm">
            <i class="bi bi-x-circle-fill"></i>
            <strong>Error:</strong> @TempData["ErrorMessage"]
        </div>
    }

    <div class="alert alert-warning border-0 shadow-sm">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Warning!</strong> Are you sure you want to delete this book? This action cannot be undone.
    </div>

    <div class="card">
        <div class="card-body">
            <h3>@Model.Title</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">ISBN</dt>
                <dd class="col-sm-9">@Model.ISBN</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category.Name</dd>

                <dt class="col-sm-3">Publisher</dt>
                <dd class="col-sm-9">@Model.Publisher.Name</dd>

                <dt class="col-sm-3">Published Year</dt>
                <dd class="col-sm-9">@Model.PublishedYear</dd>

                <dt class="col-sm-3">Total Copies</dt>
                <dd class="col-sm-9">@Model.TotalCopies</dd>

                <dt class="col-sm-3">Available Copies</dt>
                <dd class="col-sm-9">@Model.AvailableCopies</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="BookId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete This Book
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
