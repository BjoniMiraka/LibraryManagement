@model IEnumerable<LibraryManagementSystem.Models.Loan>

@{
    ViewData["Title"] = "My Borrowed Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Loans</h1>
        <a asp-controller="Home" asp-action="Guide" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-question-circle"></i> Need Help?
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card text-center" style="padding: 4rem 2rem; border: 2px dashed #d1d5db; background: #fafafa;">
            <div style="font-size: 4rem; margin-bottom: 1rem;">ðŸ“š</div>
            <h3 style="font-weight: 700; margin-bottom: 1rem;">No loans yet</h3>
            <p style="color: #6b7280; margin-bottom: 2rem;">Browse books and start reading</p>
            <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">
                Browse Books
            </a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Loan Date</th>
                                <th>Due Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                                <th>Late Fee</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model)
                            {
                                var statusClass = loan.Status == LoanStatus.Active ? "success" :
                                                loan.Status == LoanStatus.Returned ? "secondary" :
                                                loan.IsOverdue ? "danger" : "warning";

                                <tr>
                                    <td>
                                        <strong>@loan.Book.Title</strong><br>
                                        <small class="text-muted">ISBN: @loan.Book.ISBN</small>
                                    </td>
                                    <td>@loan.LoanDate.ToString()</td>
                                    <td>
                                        @loan.DueDate.ToString()
                                        @if (loan.IsOverdue && loan.Status == LoanStatus.Active)
                                        {
                                            <br><span class="badge bg-danger">OVERDUE</span>
                                        }
                                    </td>
                                    <td>@(loan.ReturnDate?.ToString() ?? "-")</td>
                                    <td><span class="badge bg-@statusClass">@loan.Status</span></td>
                                    <td>
                                        @if (loan.LateFee > 0)
                                        {
                                            <span class="text-danger">$@loan.LateFee</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (loan.Status == LoanStatus.Active)
                                        {
                                            <button class="btn btn-sm btn-success mark-returned" data-loan-id="@loan.LoanId">
                                                <i class="bi bi-check-circle"></i> I Returned This
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (Model.Any(l => l.IsOverdue && l.Status == LoanStatus.Active))
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Reminder:</strong> You have overdue books. Please return them as soon as possible to avoid additional late fees ($1 per day).
            </div>
        }
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mark-returned').click(function () {
                const loanId = $(this).data('loan-id');
                const button = $(this);
                const row = button.closest('tr');

                if (confirm('Did you return this book to the library?\n\nClick OK only if you physically returned the book to the librarian.')) {
                    $.ajax({
                        url: '@Url.Action("MarkAsReturned", "Member")',
                        type: 'POST',
                        data: { loanId: loanId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert('âœ“ Marked as returned! ' + response.message, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            } else {
                                showAlert(response.message, 'danger');
                                button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> I Returned This');
                            }
                        },
                        error: function () {
                            showAlert('Failed to mark as returned. Please try again.', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> I Returned This');
                        }
                    });
                }
            });

            // Use global toast function from site.js
            function showAlert(message, type) {
                showToast(message, type, 4000);
            }
        });
    </script>
}
