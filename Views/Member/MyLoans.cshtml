@model IEnumerable<LibraryManagementSystem.Models.Loan>

@{
    ViewData["Title"] = "My Loans";
}

<div class="container mt-4">
    <h1 class="mb-4">My Loans</h1>

    <!-- Help Card -->
    <div class="card mb-4 bg-light">
        <div class="card-body">
            <h5><i class="bi bi-info-circle"></i> What are Loans?</h5>
            <p class="mb-2">
                A <strong>loan</strong> means you've borrowed a book from the library. Each loan has:
            </p>
            <div class="row">
                <div class="col-md-3">
                    <strong><i class="bi bi-calendar-check"></i> Loan Date:</strong><br>
                    <small>When you borrowed it</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-calendar-x"></i> Due Date:</strong><br>
                    <small>When to return (14 days)</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-check-circle"></i> Return Date:</strong><br>
                    <small>When you returned it</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-cash"></i> Late Fee:</strong><br>
                    <small>$1 per day if overdue</small>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You don't have any loans yet.
            <a asp-controller="Books" asp-action="Index" class="alert-link">Browse books</a> to get started!
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Loan Date</th>
                                <th>Due Date</th>
                                <th>Return Date</th>
                                <th>Status</th>
                                <th>Late Fee</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model)
                            {
                                var statusClass = loan.Status == LoanStatus.Active ? "success" :
                                                loan.Status == LoanStatus.Returned ? "secondary" :
                                                loan.IsOverdue ? "danger" : "warning";

                                <tr>
                                    <td>
                                        <strong>@loan.Book.Title</strong><br>
                                        <small class="text-muted">ISBN: @loan.Book.ISBN</small>
                                    </td>
                                    <td>@loan.LoanDate.ToString()</td>
                                    <td>
                                        @loan.DueDate.ToString()
                                        @if (loan.IsOverdue && loan.Status == LoanStatus.Active)
                                        {
                                            <br><span class="badge bg-danger">OVERDUE</span>
                                        }
                                    </td>
                                    <td>@(loan.ReturnDate?.ToString() ?? "-")</td>
                                    <td><span class="badge bg-@statusClass">@loan.Status</span></td>
                                    <td>
                                        @if (loan.LateFee > 0)
                                        {
                                            <span class="text-danger">$@loan.LateFee</span>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (loan.Status == LoanStatus.Active)
                                        {
                                            <button class="btn btn-sm btn-success mark-returned" data-loan-id="@loan.LoanId">
                                                <i class="bi bi-check-circle"></i> I Returned This
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (Model.Any(l => l.IsOverdue && l.Status == LoanStatus.Active))
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Reminder:</strong> You have overdue books. Please return them as soon as possible to avoid additional late fees ($1 per day).
            </div>
        }
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mark-returned').click(function () {
                const loanId = $(this).data('loan-id');
                const button = $(this);
                const row = button.closest('tr');

                if (confirm('Did you return this book to the library?\n\nClick OK only if you physically returned the book to the librarian.')) {
                    $.ajax({
                        url: '@Url.Action("MarkAsReturned", "Member")',
                        type: 'POST',
                        data: { loanId: loanId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert('âœ“ Marked as returned! ' + response.message, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            } else {
                                showAlert(response.message, 'danger');
                                button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> I Returned This');
                            }
                        },
                        error: function () {
                            showAlert('Failed to mark as returned. Please try again.', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> I Returned This');
                        }
                    });
                }
            });

            // Use global toast function from site.js
            function showAlert(message, type) {
                showToast(message, type, 4000);
            }
        });
    </script>
}
