@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container" style="padding: 2rem 0;">
    <div class="mb-4">
        <h1 style="font-weight: 700; margin-bottom: 0.5rem;">Hey there! üëã</h1>
        <p style="color: #6b7280; font-size: 1.1rem;">Here's what's happening with your books</p>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card" style="background: linear-gradient(135deg, #5b21b6 0%, #7c3aed 100%); color: white; padding: 2rem; border-radius: 16px;">
                <div style="font-size: 2rem; margin-bottom: 0.5rem;">üìö</div>
                <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.5rem;">Active Loans</div>
                <div style="font-size: 2.5rem; font-weight: 800;">@ViewBag.ActiveLoans</div>
                <a asp-action="MyLoans" style="color: white; font-size: 0.9rem; margin-top: 1rem; display: inline-block;">
                    View all ‚Üí
                </a>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card" style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 2rem; border-radius: 16px;">
                <div style="font-size: 2rem; margin-bottom: 0.5rem;">‚ö†Ô∏è</div>
                <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.5rem;">Overdue</div>
                <div style="font-size: 2.5rem; font-weight: 800;">@ViewBag.OverdueLoans</div>
                @if (ViewBag.OverdueLoans > 0)
                {
                    <div style="font-size: 0.85rem; margin-top: 0.5rem; opacity: 0.9;">Return these soon!</div>
                }
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card" style="background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%); color: white; padding: 2rem; border-radius: 16px;">
                <div style="font-size: 2rem; margin-bottom: 0.5rem;">üîñ</div>
                <div style="font-size: 0.9rem; opacity: 0.9; margin-bottom: 0.5rem;">Reservations</div>
                <div style="font-size: 2.5rem; font-weight: 800;">@ViewBag.ActiveReservations</div>
                <a asp-action="MyReservations" style="color: white; font-size: 0.9rem; margin-top: 1rem; display: inline-block;">
                    View all ‚Üí
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card" style="padding: 2rem; border: 2px solid #f3f4f6;">
        <h4 style="margin-bottom: 1.5rem; font-weight: 700;">Quick Actions</h4>
        <div class="row g-3">
            <div class="col-md-3">
                <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary w-100" style="padding: 1rem;">
                    <i class="bi bi-book"></i> Browse Books
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="MyLoans" class="btn btn-outline-primary w-100" style="padding: 1rem;">
                    <i class="bi bi-journal-check"></i> My Loans
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="MyReservations" class="btn btn-outline-primary w-100" style="padding: 1rem;">
                    <i class="bi bi-bookmark"></i> Reservations
                </a>
            </div>
            <div class="col-md-3">
                <a asp-action="Profile" class="btn btn-outline-primary w-100" style="padding: 1rem;">
                    <i class="bi bi-person"></i> Profile
                </a>
            </div>
        </div>
    </div>

    <!-- Help Link -->
    <div class="text-center" style="margin-top: 3rem;">
        <a asp-controller="Home" asp-action="Guide" style="color: #6b7280;">
            Need help? Check out our guide ‚Üí
        </a>
    </div>
</div>
