@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">My Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Active Loans</h5>
                    <h2>@ViewBag.ActiveLoans</h2>
                    <a asp-action="MyLoans" class="btn btn-light btn-sm mt-2">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body">
                    <h5 class="card-title">Overdue Books</h5>
                    <h2>@ViewBag.OverdueLoans</h2>
                    @if (ViewBag.OverdueLoans > 0)
                    {
                        <small>Please return these books as soon as possible!</small>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Active Reservations</h5>
                    <h2>@ViewBag.ActiveReservations</h2>
                    <a asp-action="MyReservations" class="btn btn-light btn-sm mt-2">View All</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">Quick Actions</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-book"></i> Browse Books
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-action="MyLoans" class="btn btn-outline-success w-100 mb-2">
                        <i class="bi bi-journal-check"></i> My Loans
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-action="MyReservations" class="btn btn-outline-info w-100 mb-2">
                        <i class="bi bi-bookmark"></i> My Reservations
                    </a>
                </div>
                <div class="col-md-3">
                    <a asp-action="Profile" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-person"></i> My Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Section -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-question-circle"></i> How to Borrow Books</h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li><strong>Browse Books:</strong> Click "Browse Books" above</li>
                        <li><strong>Find a Book:</strong> Search or filter by category</li>
                        <li><strong>Check Availability:</strong> Look for "Available" badge</li>
                        <li><strong>Borrow:</strong> Click "Borrow This Book" button</li>
                        <li><strong>Track:</strong> View your loan in "My Loans"</li>
                    </ol>
                    <hr>
                    <p class="mb-0"><small class="text-muted">
                        <i class="bi bi-clock"></i> Loan period: <strong>14 days</strong><br>
                        <i class="bi bi-exclamation-triangle"></i> Late fee: <strong>$1 per day</strong>
                    </small></p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-bookmark"></i> How to Reserve Books</h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li><strong>Find Unavailable Book:</strong> All copies are loaned out</li>
                        <li><strong>Reserve:</strong> Click "Reserve This Book" button</li>
                        <li><strong>Wait:</strong> You'll be notified when available</li>
                        <li><strong>Pick Up:</strong> You have 7 days to borrow it</li>
                        <li><strong>Manage:</strong> Cancel anytime in "My Reservations"</li>
                    </ol>
                    <hr>
                    <p class="mb-0"><small class="text-muted">
                        <i class="bi bi-people"></i> Queue: <strong>First come, first served</strong><br>
                        <i class="bi bi-calendar"></i> Pickup window: <strong>7 days</strong>
                    </small></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Message -->
    <div class="card">
        <div class="card-body">
            <h5><i class="bi bi-info-circle"></i> Quick Tips</h5>
            <div class="row">
                <div class="col-md-4">
                    <h6 class="text-primary">ðŸ“š My Loans</h6>
                    <p class="small">See all books you've borrowed, when they're due, and your borrowing history.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-info">ðŸ”– My Reservations</h6>
                    <p class="small">Track books you're waiting for. Cancel reservations you no longer need.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-success">ðŸ‘¤ My Profile</h6>
                    <p class="small">View and edit your personal information, address, and phone number.</p>
                </div>
            </div>
        </div>
    </div>
</div>
