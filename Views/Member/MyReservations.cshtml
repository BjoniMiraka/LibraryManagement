@model IEnumerable<LibraryManagementSystem.Models.Reservation>

@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mt-4">
    <h1 class="mb-4">My Reservations</h1>

    <!-- Help Card -->
    <div class="card mb-4 bg-light">
        <div class="card-body">
            <h5><i class="bi bi-bookmark"></i> What are Reservations?</h5>
            <p class="mb-2">
                A <strong>reservation</strong> is like joining a waiting list for a book. When all copies are borrowed, you can reserve it and be next in line!
            </p>
            <div class="row">
                <div class="col-md-3">
                    <strong><i class="bi bi-hourglass-split"></i> Pending:</strong><br>
                    <small>Waiting for book</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-check-circle"></i> Fulfilled:</strong><br>
                    <small>Book is ready!</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-x-circle"></i> Cancelled:</strong><br>
                    <small>You cancelled it</small>
                </div>
                <div class="col-md-3">
                    <strong><i class="bi bi-clock-history"></i> Expired:</strong><br>
                    <small>Pickup time passed</small>
                </div>
            </div>
            <hr>
            <p class="mb-0"><small>
                <i class="bi bi-info-circle"></i> You have <strong>7 days</strong> to pick up a book once it's available. After that, the reservation expires and the next person in line gets it.
            </small></p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You don't have any reservations.
            When you find a book that's unavailable, click "Reserve This Book" to join the waiting list!
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Reservation Date</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model)
                            {
                                var statusClass = reservation.Status == ReservationStatus.Pending ? "info" :
                                                reservation.Status == ReservationStatus.Fulfilled ? "success" :
                                                reservation.Status == ReservationStatus.Cancelled ? "secondary" : "danger";

                                <tr>
                                    <td>
                                        <strong>@reservation.Book.Title</strong><br>
                                        <small class="text-muted">ISBN: @reservation.Book.ISBN</small>
                                    </td>
                                    <td>@reservation.ReservationDate.ToString()</td>
                                    <td>@reservation.ExpiryDate.ToString()
                                    <td><span class="badge bg-@statusClass">@reservation.Status</span></td>
                                    <td>
                                        @if (reservation.Status == ReservationStatus.Pending)
                                        {
                                            <button class="btn btn-sm btn-danger cancel-reservation" data-reservation-id="@reservation.ReservationId">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.cancel-reservation').click(function () {
                const reservationId = $(this).data('reservation-id');
                const button = $(this);

                if (confirm('Are you sure you want to cancel this reservation?')) {
                    $.ajax({
                        url: '@Url.Action("CancelReservation", "Member")',
                        type: 'POST',
                        data: { reservationId: reservationId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert(response.message, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 1500);
                            } else {
                                showAlert(response.message, 'danger');
                                button.prop('disabled', false).html('<i class="bi bi-x-circle"></i> Cancel');
                            }
                        },
                        error: function () {
                            showAlert('Failed to cancel reservation', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-x-circle"></i> Cancel');
                        }
                    });
                }
            });

            // Use global toast function from site.js
            function showAlert(message, type) {
                showToast(message, type, 3000);
            }
        });
    </script>
}
