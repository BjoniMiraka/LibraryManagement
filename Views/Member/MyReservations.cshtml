@model IEnumerable<LibraryManagementSystem.Models.Reservation>

@{
    ViewData["Title"] = "My Reserved Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Reservations</h1>
        <a asp-controller="Home" asp-action="Guide" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-question-circle"></i> Need Help?
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card text-center" style="padding: 4rem 2rem; border: 2px dashed #d1d5db; background: #fafafa;">
            <div style="font-size: 4rem; margin-bottom: 1rem;">ðŸ”–</div>
            <h3 style="font-weight: 700; margin-bottom: 1rem;">No reservations</h3>
            <p style="color: #6b7280;">Reserve books when all copies are borrowed</p>
        </div>
    }
    else
    {
        @if (Model.Any(r => r.Status == ReservationStatus.Fulfilled))
        {
            <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); color: white; padding: 1.5rem; border-radius: 16px; margin-bottom: 1.5rem;">
                <div style="font-size: 2rem; margin-bottom: 0.5rem;">ðŸŽ‰</div>
                <h4 style="color: white; font-weight: 700; margin-bottom: 0.5rem;">Good news!</h4>
                <p style="margin: 0; opacity: 0.95;">Your reserved book is ready. Click "Borrow Now!" below to get it.</p>
            </div>
        }
        <div class="card border-0 shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Reservation Date</th>
                                <th>Expiry Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model)
                            {
                                var statusClass = reservation.Status == ReservationStatus.Pending ? "info" :
                                                reservation.Status == ReservationStatus.Fulfilled ? "success" :
                                                reservation.Status == ReservationStatus.Cancelled ? "secondary" : "danger";

                                <tr class="@(reservation.Status == ReservationStatus.Fulfilled ? "table-success" : "")">
                                    <td>
                                        <strong>@reservation.Book.Title</strong><br>
                                        <small class="text-muted">ISBN: @reservation.Book.ISBN</small>
                                        @if (reservation.Status == ReservationStatus.Fulfilled)
                                        {
                                            <br><span class="badge bg-success mt-1">
                                                <i class="bi bi-check-circle-fill"></i> Available Now!
                                            </span>
                                        }
                                    </td>
                                    <td>@reservation.ReservationDate.ToString()</td>
                                    <td>
                                        @if (reservation.ExpiryDate.HasValue)
                                        {
                                            @reservation.ExpiryDate.Value.ToString()
                                            @if (reservation.Status == ReservationStatus.Fulfilled)
                                            {
                                                <br><small class="text-danger">
                                                    <i class="bi bi-clock"></i> Pick up by this date!
                                                </small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@statusClass">@reservation.Status</span>
                                    </td>
                                    <td>
                                        @if (reservation.Status == ReservationStatus.Pending)
                                        {
                                            <button class="btn btn-sm btn-warning cancel-reservation" data-reservation-id="@reservation.ReservationId">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        }
                                        else if (reservation.Status == ReservationStatus.Fulfilled)
                                        {
                                            <a asp-controller="Books" asp-action="Details" asp-route-id="@reservation.BookId" class="btn btn-sm btn-success">
                                                <i class="bi bi-book"></i> Borrow Now!
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.cancel-reservation').click(function () {
                const reservationId = $(this).data('reservation-id');
                const button = $(this);

                if (confirm('Are you sure you want to cancel this reservation?')) {
                    $.ajax({
                        url: '@Url.Action("CancelReservation", "Member")',
                        type: 'POST',
                        data: { reservationId: reservationId },
                        beforeSend: function () {
                            button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');
                        },
                        success: function (response) {
                            if (response.success) {
                                showAlert(response.message, 'success');
                                setTimeout(function () {
                                    location.reload();
                                }, 1500);
                            } else {
                                showAlert(response.message, 'danger');
                                button.prop('disabled', false).html('<i class="bi bi-x-circle"></i> Cancel');
                            }
                        },
                        error: function () {
                            showAlert('Failed to cancel reservation', 'danger');
                            button.prop('disabled', false).html('<i class="bi bi-x-circle"></i> Cancel');
                        }
                    });
                }
            });

            // Use global toast function from site.js
            function showAlert(message, type) {
                showToast(message, type, 3000);
            }
        });
    </script>
}
