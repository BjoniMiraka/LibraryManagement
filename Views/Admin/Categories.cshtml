@model IEnumerable<LibraryManagementSystem.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Categories</h1>

    <!-- Add New Category Button -->
    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#categoryModal" onclick="openCreateModal()">
        <i class="bi bi-plus-circle"></i> Add New Category
    </button>

    <!-- Categories Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="categoriesTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr id="category-@category.CategoryId">
                                <td>@category.CategoryId</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="openEditModal(@category.CategoryId, '@category.Name', '@category.Description')">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteCategory(@category.CategoryId)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Category Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="categoryForm">
                    <input type="hidden" id="categoryId" value="0" />
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="categoryName" required />
                    </div>
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="categoryDescription" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveCategory()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Open modal for creating new category
        function openCreateModal() {
            $('#modalTitle').text('Add Category');
            $('#categoryId').val(0);
            $('#categoryName').val('');
            $('#categoryDescription').val('');
        }

        // Open modal for editing category
        function openEditModal(id, name, description) {
            $('#modalTitle').text('Edit Category');
            $('#categoryId').val(id);
            $('#categoryName').val(name);
            $('#categoryDescription').val(description);
            $('#categoryModal').modal('show');
        }

        // Save category (Create or Update) using AJAX
        function saveCategory() {
            const categoryId = parseInt($('#categoryId').val());
            const categoryName = $('#categoryName').val();
            const categoryDescription = $('#categoryDescription').val();

            if (!categoryName) {
                alert('Category name is required!');
                return;
            }

            const category = {
                CategoryId: categoryId,
                Name: categoryName,
                Description: categoryDescription
            };

            const url = categoryId === 0 
                ? '@Url.Action("CreateCategory", "Admin")' 
                : '@Url.Action("UpdateCategory", "Admin")';

            $.ajax({
                url: url,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(category),
                success: function (response) {
                    if (response.success) {
                        showAlert(response.message, 'success');
                        $('#categoryModal').modal('hide');
                        
                        if (categoryId === 0) {
                            // Add new row to table
                            const newRow = '<tr id="category-' + response.category.categoryId + '">' +
                                '<td>' + response.category.categoryId + '</td>' +
                                '<td>' + response.category.name + '</td>' +
                                '<td>' + response.category.description + '</td>' +
                                '<td>' + new Date().toISOString().split('T')[0] + '</td>' +
                                '<td>' +
                                '<button class="btn btn-sm btn-warning" onclick="openEditModal(' + response.category.categoryId + ', \'' + response.category.name + '\', \'' + response.category.description + '\')"><i class="bi bi-pencil"></i> Edit</button> ' +
                                '<button class="btn btn-sm btn-danger" onclick="deleteCategory(' + response.category.categoryId + ')"><i class="bi bi-trash"></i> Delete</button>' +
                                '</td>' +
                                '</tr>';
                            $('#categoriesTable tbody').append(newRow);
                        } else {
                            // Update existing row
                            const row = $('#category-' + categoryId);
                            row.find('td:eq(1)').text(categoryName);
                            row.find('td:eq(2)').text(categoryDescription);
                        }
                    } else {
                        showAlert(response.message, 'danger');
                    }
                },
                error: function () {
                    showAlert('An error occurred while saving the category', 'danger');
                }
            });
        }

        // Delete category using AJAX
        function deleteCategory(id) {
            if (confirm('Are you sure you want to delete this category?')) {
                $.ajax({
                    url: '@Url.Action("DeleteCategory", "Admin")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            showAlert(response.message, 'success');
                            $('#category-' + id).fadeOut(function () {
                                $(this).remove();
                            });
                        } else {
                            showAlert(response.message, 'danger');
                        }
                    },
                    error: function () {
                        showAlert('An error occurred while deleting the category', 'danger');
                    }
                });
            }
        }

        // Helper function to show alerts
        // Use global toast function from site.js
        function showAlert(message, type) {
            showToast(message, type, 3000);
        }
    </script>
}

